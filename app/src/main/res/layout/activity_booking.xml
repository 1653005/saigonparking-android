<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgQRCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:adjustViewBounds="true"
                android:maxWidth="200dp"
                android:maxHeight="200dp"
                android:scaleType="fitCenter" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="Booking ID: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtBookingID"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtBookingID"
                                android:textColor="#fff"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="Status: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtStatus"
                                android:textColor="#fff"
                                android:textSize="15sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:id="@+id/Openhour"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="Created At: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtCreatedAt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtCreatedAt"
                                android:textColor="#fff"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="Parking-lot: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtParking"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtParking"
                                android:textColor="#fff"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="Address: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtAddress"
                                android:textColor="#fff"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.25"
                                android:padding="5dp"
                                android:text="License Plate: "
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtLicensePlate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.75"
                                android:padding="5dp"
                                android:text="txtLicensePlate"
                                android:textColor="#fff"
                                android:textSize="15sp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="TYPE: "
                    android:textColor="#42b883"
                    android:textSize="14sp"
                    android:visibility="visible"

                    android:id="@+id/imgchat"
                    android:src="@drawable/icon_chat" />


                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="TYPE: "
                    android:textColor="#42b883"
                    android:textSize="14sp"
                    android:visibility="visible"

                    android:id="@+id/imgdirection"
                    android:src="@drawable/icon_direction2" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="TYPE: "
                    android:textColor="#42b883"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:id="@+id/imgcancel"
                    android:src="@drawable/icon_cancel" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>